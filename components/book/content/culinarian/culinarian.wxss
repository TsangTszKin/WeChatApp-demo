/* components/home/content/hot/hot.wxss */
@import '/style/weui.wxss';

.culinarian-cell {
  padding: 10px;
  border-bottom: 1px solid gainsboro;
  position: relative;
  height: auto;
  width: auto;
  display: block;
}

.culinarian-cell .header {
  margin-bottom: 5px;
}

.culinarian-cell .header .weui-btn {
  position: absolute;
  top: 0;
  right: 10px;
}

.culinarian-cell .header .title {
  font-size: 20px;
  word-break: break-all;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  letter-spacing: 2px;
  line-height: 19px;
  padding: 8px 0;
  width: calc(100% - 65px);
}
