/* components/home/content/hot/hot.wxss */
@import '/style/weui.wxss';

.book-cell {
  padding: 10px;
  border-bottom: 1px solid gainsboro;
  height: auto;
  width: auto;
  display: block;
}

.book-cell .header {
  position: relative;
  margin-bottom: 5px;
}

.book-cell .header .status {
  position: absolute;
  right: 10px;
  top: 0;
  font-size: 20px;
  color: #E64340;
}

.book-cell  .title {
  font-size: 20px;
  word-break: break-all;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  letter-spacing: 2px;
  line-height: 19px;
  padding: 8px 0;
  width: calc(100% - 65px);
}

.book-cell  .title2 {
  font-size: 15px;
  word-break: break-all;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  letter-spacing: 2px;
  line-height: 15px;
  padding: 8px 0;
  width: 100%;
}

.book-cell  .option-group {
  text-align: right;
}

.book-cell  .option-group .weui-btn {
  margin-right: 10px;
}
