.book-details .book-cell {
  padding: 10px;
  border-bottom: 1px solid gainsboro;
  border-top: 1px solid gainsboro;
  height: auto;
  width: auto;
  display: block;
}

.book-details .book-cell .header {
  position: relative;
  margin-bottom: 5px;
}

.book-details .book-cell .header .status {
  position: absolute;
  right: 10px;
  top: 0;
  font-size: 20px;
  color: #e64340;
}

.book-details .book-cell  .title {
  font-size: 20px;
  word-break: break-all;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  letter-spacing: 2px;
  line-height: 19px;
  padding: 8px 0;
}

